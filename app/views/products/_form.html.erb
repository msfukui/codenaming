<%= form_for(@product, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: "col-sm-1 control-label" %>
    <div class="col-xs-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :version, class: "col-sm-1 control-label" %>
    <div class="col-xs-3">
      <%= f.text_field :version, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :path, class: "col-sm-1 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :path, class: "form-control" %>
    </div>
  </div>
  <div class="actions form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
