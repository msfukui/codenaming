<h1>Product List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.version %></td>
        <td><%= product.path %></td>
        <td><%= link_to 'Show', product, class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default", role: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Top', root_path, class: "btn btn-primary btn-lg active", role: "button" %>
<%= link_to 'New Product', new_product_path, class: "btn btn-primary btn-lg active", role: "button" %>
