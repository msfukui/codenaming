<h1>Product: <%= @product.name %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Version:</strong>
  <%= @product.version %>
</p>

<p>
  <strong>Path:</strong>
  <%= @product.path %>
</p>

<p>
  <strong>Count:</strong>
  <strong>(Class) </strong><%= @items.where(kind: :class ).count %>,
  <strong>(Module)</strong><%= @items.where(kind: :module).count %>,
  <strong>(Method)</strong><%= @items.where(kind: :method).count %>
</p>

<p>
<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary active", role: "button" %>
<%= link_to 'Back', products_path, class: "btn btn-default active", role: "button" %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>File</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.kind %></td>
        <td><%= item.file %></td>
      </tr>
    <% end %>
  </tbody>
</table>
